<launch>
    <arg name="map_size_x" value="200.0"/>
    <arg name="map_size_y" value="200.0"/>
    <arg name="map_size_z" value=" 3.0"/>
    <arg name="odom_topic" value="visual_slam/odom" />

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find ego_planner)/launch/include/habitat.rviz" required="true"/>

    <!-- habitat sim -->
    <include file="$(find habitat)/launch/simulator_1_agent.launch">
        <arg name="global_pcd_reference_frame" value="world"/>
        <arg name="sensor_translation_z_agent_0" value="1.5"/>
        <arg name="odom_topic_agent_0" value="/drone_0_visual_slam/odom"/>
    </include>

    <include file="$(find ego_planner)/launch/include/run_in_habitat.xml">
        <arg name="drone_id" value="0"/>
        <arg name="init_x" value="0.0"/>
        <arg name="init_y" value="0.0"/>
        <arg name="init_z" value="0.2"/>
        <arg name="map_size_x" value="$(arg map_size_x)"/>
        <arg name="map_size_y" value="$(arg map_size_y)"/>
        <arg name="map_size_z" value="$(arg map_size_z)"/>
        <arg name="odom_topic" value="$(arg odom_topic)"/>
        <arg name="flight_type" value="1"/>
    </include>
</launch>

