<launch>
    <arg name="map_size_x" value="200.0"/>
    <arg name="map_size_y" value="200.0"/>
    <arg name="map_size_z" value=" 3.0"/>
    <arg name="odom_topic" value="visual_slam/odom" />
    <!-- swarm topic transmitter bridge-->
    <include file="$(find swarm_bridge)/launch/bridge_udp.launch">
        <arg name="drone_id" value="999"/>
        <arg name="broadcast_ip" value="127.0.0.255"/>
    </include>

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find ego_planner)/launch/include/habitat.rviz" required="true"/>

    <!-- habitat sim -->
    <include file="$(find habitat)/launch/simulator_4_agents.launch">
        <arg name="global_pcd_reference_frame" value="world"/>

        <arg name="sensor_translation_z_agent_0" value="1.5"/>
        <arg name="sensor_translation_z_agent_1" value="1.5"/>
        <arg name="sensor_translation_z_agent_2" value="1.5"/>
        <arg name="sensor_translation_z_agent_3" value="1.5"/>

        <arg name="height_agent_0" value="1.6"/>
        <arg name="height_agent_1" value="1.6"/>
        <arg name="height_agent_2" value="1.6"/>
        <arg name="height_agent_3" value="1.6"/>

        <arg name="odom_topic_agent_0" value="/drone_0_visual_slam/odom"/>
        <arg name="odom_topic_agent_1" value="/drone_1_visual_slam/odom"/>
        <arg name="odom_topic_agent_2" value="/drone_2_visual_slam/odom"/>
        <arg name="odom_topic_agent_3" value="/drone_3_visual_slam/odom"/>
        
        <arg name="local_pcd_topic_agent_0" value="/drone_0_pcl_render_node/cloud"/>
        <arg name="local_pcd_topic_agent_1" value="/drone_1_pcl_render_node/cloud"/>
        <arg name="local_pcd_topic_agent_2" value="/drone_2_pcl_render_node/cloud"/>
        <arg name="local_pcd_topic_agent_3" value="/drone_3_pcl_render_node/cloud"/>

    </include>

    <include file="$(find ego_planner)/launch/include/run_in_habitat.xml">
        <arg name="drone_id" value="0"/>
        <arg name="init_x" value="2"/>
        <arg name="init_y" value="4"/>
        <arg name="init_z" value="0.0"/>
        <arg name="target0_x" value="-10"/>
        <arg name="target0_y" value="-0.5"/>
        <arg name="target0_z" value="0.0"/>
        <arg name="map_size_x" value="$(arg map_size_x)"/>
        <arg name="map_size_y" value="$(arg map_size_y)"/>
        <arg name="map_size_z" value="$(arg map_size_z)"/>
        <arg name="odom_topic" value="$(arg odom_topic)"/>
    </include>
    <include file="$(find ego_planner)/launch/include/run_in_habitat.xml">
        <arg name="drone_id" value="1"/>
        <arg name="init_x" value="3.5"/>
        <arg name="init_y" value="-0.5"/>
        <arg name="init_z" value="0.0"/>
        <arg name="target0_x" value="-10"/>
        <arg name="target0_y" value="4.5"/>
        <arg name="target0_z" value="0.0"/>
        <arg name="map_size_x" value="$(arg map_size_x)"/>
        <arg name="map_size_y" value="$(arg map_size_y)"/>
        <arg name="map_size_z" value="$(arg map_size_z)"/>
        <arg name="odom_topic" value="$(arg odom_topic)"/>
    </include>
    <include file="$(find ego_planner)/launch/include/run_in_habitat.xml">
        <arg name="drone_id" value="2"/>
        <arg name="init_x" value="-10"/>
        <arg name="init_y" value="-0.5"/>
        <arg name="init_z" value="0.0"/>
        <arg name="target0_x" value="2"/>
        <arg name="target0_y" value="4"/>
        <arg name="target0_z" value="0.0"/>
        <arg name="map_size_x" value="$(arg map_size_x)"/>
        <arg name="map_size_y" value="$(arg map_size_y)"/>
        <arg name="map_size_z" value="$(arg map_size_z)"/>
        <arg name="odom_topic" value="$(arg odom_topic)"/>
    </include>
    <include file="$(find ego_planner)/launch/include/run_in_habitat.xml">
        <arg name="drone_id" value="3"/>
        <arg name="init_x" value="-10"/>
        <arg name="init_y" value="4.5"/>
        <arg name="init_z" value="0.0"/>
        <arg name="target0_x" value="3.5"/>
        <arg name="target0_y" value="-0.5"/>
        <arg name="target0_z" value="0.0"/>
        <arg name="map_size_x" value="$(arg map_size_x)"/>
        <arg name="map_size_y" value="$(arg map_size_y)"/>
        <arg name="map_size_z" value="$(arg map_size_z)"/>
        <arg name="odom_topic" value="$(arg odom_topic)"/>
    </include>
</launch>